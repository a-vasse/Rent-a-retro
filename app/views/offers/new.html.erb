<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-12">
      <h1 class="mb-4">New <span class="text-primary">Offer</span></h1>
      <div class="color-line"></div>
      <%= simple_form_for(@offer) do |f| %>
        <%= f.association :game, input_html: {data: {controller: "tom_select"}} %>
        <%= f.input :platform, collection: %w(NES SNES Genesis Megadrive Playstation Playstation2), input_html: {data: {controller: "tom_select"}} %>
        <%= f.input :price %>
        <div class="modal-footer d-flex justify-content-between border-0">
          <%= link_to "Cancel", root_path %>
          <%= f.button :submit, class:"btn btn-primary mt-3 mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
