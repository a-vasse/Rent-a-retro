<div class="container">
  <h1>Offers</h1>
  <div class="row row-cols-2 row-cols-lg-3 row-cols-lg-4">
    <% @offers.each do |offer| %>
      <div class="col mb-4">
        <div class="game-card">
          <div class="card-picture" style="background-image: url('<%= offer.game.photo.attached? ? cl_image_path(offer.game.photo.key) : image_path("games/noimage.png") %>')">
            <div class="platform-icon-box">
              <%= image_tag("games/snesicon.png", class:'platform-icon') %>
              <%= image_tag("games/psxicon.png", class:'platform-icon') %>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div class="card-details me-3">
              <h5><%= offer.game.name %></h5>
              <p class="p-0">Platform: <%= offer.platform %></p>
              <p class="p-0">Price: <%= offer.price %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
