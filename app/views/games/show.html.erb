<div class="container">
  <%# Game content  %>
  <div class="row">
    <div class="col-12 mb-3 d-flex justify-content-between">
      <h1><%= @game.name %></h1>
      <%= link_to 'Back to games', games_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-12">
      <div class="row">
        <div class="col-5">
          <h2>Game information</h2>
          <p><%= @game.description %></p>
        </div>
        <div class="col-7">
          <%= @game.photo.attached? ? cl_image_tag(@game.photo.key, :alt => "image", class: 'img-fluid') : image_tag("https://source.unsplash.com/I6mx55jXOvM", class: 'img-fluid') %>
        </div>
      </div>
    </div>
  </div>
  <%# Offers  %>
  <div class="row">
    <div class="col-12">
      <h2 class="mb-3">Offers</h2>
      <div class="row row-cols-2 row-cols-lg-3">
        <%= @game.offers.each do |offer| %>
          <div class="col">
            <div class="offer-container">
              <div class="row justify-content-center">
                <div class="col-8">
                  <img src="https://kitt.lewagon.com/placeholder/users/papillar" class="offer-img" alt="">
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-5">
                  <div class="offer-price">
                    <%= offer.price %>Â¥
                    <span>per day</span>
                  </div>
                </div>
                <div class="col-7">
                  <div class="offer-content">
                    <h5><%= offer.user.display_name %></h5>
                    <p class="mb-0">Rating: <%= rand(1..10) %></p>
                    <p>Location</p>
                  </div>
                </div>
              </div>
              <div class="offer-container-background"></div>
            </div>
            <div class="w-100 text-center">
              <%= link_to 'Request', '', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
